/*主容器*/
.stepper {
  width: 80px;
  height: 26px;
  margin: 0 auto;
  border: 1px solid #ccc;
  border-radius: 3px;
  display: flex;

}

/*加号和减号*/
.stepper .text {
  float: left;
  width: 19px;
  height: 26px;
  line-height: 26px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center; 
}

/*数值*/
.stepper .input {
  width: 40px;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  display: flex;
  align-items: center;
  justify-content: center; 
}
